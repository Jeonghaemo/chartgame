// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // 게임 경제
  capital      Int      @default(10000000)
  hearts       Int      @default(5)
  maxHearts    Int      @default(5)
  lastRefillAt DateTime @default(now())

  accounts Account[]
  sessions Session[]

  // ✅ Game.user @relation("UserGames") 의 반대편을 명시
  games Game[] @relation("UserGames")

  // 활성 게임 (유저당 1개만)
  activeGameId String? @unique
  activeGame   Game?   @relation("ActiveGame", fields: [activeGameId], references: [id])

  scores Score[]

  // 광고 시청 기록 역관계
  adWatches AdWatch[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Game {
  id           String    @id @default(cuid())
  userId       String
  code         String
  symbol       String    @default("")
  startCash    Int
  startIndex   Int
  sliceStartTs Int?
  endIndex     Int?
  maxTurns     Int       @default(60)
  feeBps       Int       @default(5)
  status       String    @default("ACTIVE")
  createdAt    DateTime  @default(now())
  finishedAt   DateTime?
  returnPct    Float?

  orders    Order[]
  snapshots BalanceSnapshot[]
  Score     Score[]

  // 일반 유저–게임 관계(유저가 가진 모든 게임)
  user User @relation("UserGames", fields: [userId], references: [id], onDelete: Cascade)

  // 활성 게임 역방향(유저의 activeGame)
  activeUser User? @relation("ActiveGame")

  @@index([userId, createdAt])
}

model Order {
  id        String   @id @default(cuid())
  gameId    String
  side      String // BUY/SELL
  price     Float
  qty       Float
  fee       Float    @default(0)
  createdAt DateTime @default(now())
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([gameId, createdAt])
}

model BalanceSnapshot {
  id       String @id @default(cuid())
  gameId   String
  ts       Int // cursor 위치
  equity   Float // 총 자산
  cash     Float // 현금
  position Float // 주식 수량

  // 새로 추가된 필드들
  turn     Int? // 현재 턴
  avgPrice Float? // 평균 단가
  history  String? // 거래 히스토리 (JSON 문자열)

  createdAt DateTime @default(now())
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([gameId, ts])
  @@index([gameId, ts])
}

model AdWatch {
  id        String   @id @default(cuid())
  userId    String
  provider  String // "COUPANG" | "NAVER"
  clickedAt DateTime @default(now())
  dayKey    String // "YYYY-MM-DD" (Asia/Seoul 기준)
  index     Int // 1~4: 오늘의 시청 순번

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayKey, index]) // 같은 날 같은 순번 중복 방지
  @@index([userId, dayKey])
}

model Score {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  total     Int
  returnPct Float
  gameId    String?
  createdAt DateTime @default(now())

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game? @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
